<%= simple_form_for event do |f| %>

  <% if event.errors.any? %>
    <div class="errors-container">
      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= f.input :name %>
<%= f.input :age %>
<%= f.input :address  %>
<%= f.input :city %>
<%= f.input :description  %>
<%= f.input :price  %>
<%= f.input :photo %>
<%= f.input :photo_cache, as: :hidden %>
<%= f.submit "Mettre ton bébé en location" %>
<% end %>

